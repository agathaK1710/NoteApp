<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    android:padding="20dp">

    <EditText

        android:id="@+id/newNoteTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:gravity="top"
        android:hint="Title"
        android:importantForAutofill="no"
        android:padding="20dp"
        android:textColorHint="#9A9A9A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/newNoteTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFFF"
        android:gravity="top"
        android:hint="Title"
        android:importantForAutofill="no"
        android:padding="20dp"
        android:textColorHint="#9A9A9A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Date"
        android:textColor="#ACACAC"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newNoteTitleEditText" />

    <TextView
        android:visibility="gone"
        android:id="@+id/date1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Date"
        android:textColor="#ACACAC"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/newNoteTitleTextView" />

    <EditText

        android:id="@+id/newNoteDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFF"
        android:gravity="top"
        android:hint="Description"
        android:importantForAutofill="no"
        android:padding="20sp"
        android:textColorHint="#9A9A9A"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <ScrollView
        android:visibility="gone"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newNoteTitleTextView"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:visibility="gone"
            android:id="@+id/newNoteDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFFF"
            android:gravity="top"
            android:hint="Description"
            android:importantForAutofill="no"
            android:padding="20sp"
            android:textColorHint="#9A9A9A"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date1" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>